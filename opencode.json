{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "plan": {
      "prompt": "{file:./agents-prompts/plan.md}",
      "permission": {
        "edit": "deny",
        "bash": "allow",
        "write": "deny"
      }
    },
    "build": {
      "prompt": "{file:./agents-prompts/build.md}"
    },
    "test-provider": {
      "description": "Specialized agent for creating comprehensive tests for all implemented code",
      "mode": "subagent",
      "prompt": "{file:./agents-prompts/test-provider.md}",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true,
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    }
  },
  "tools": {
    "context7": true
  },
  "instructions": ["AGENTS.md"],
  "autoupdate": true
}
